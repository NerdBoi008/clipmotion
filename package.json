{
  "name": "clipmotion",
  "version": "0.2.0",
  "description": "CLI tool to add animation components from video clips (Instagram, TikTok, YouTube)",
  "author": "NerdBoi008",
  "license": "MIT",
  "type": "module",
  "main": "./build/index.cjs",
  "types": "./build/index.d.cts",
  "bin": {
    "clipmotion": "build/index.cjs"
  },
  "files": [
    "build/index.cjs",
    "build/index.d.cts",
    "public/r/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdBoi008/clipmotion.git"
  },
  "bugs": {
    "url": "https://github.com/NerdBoi008/clipmotion/issues"
  },
  "homepage": "https://github.com/NerdBoi008/clipmotion#readme",
  "keywords": [
    "animation",
    "cli",
    "components",
    "instagram",
    "tiktok",
    "youtube",
    "react",
    "nextjs",
    "vue",
    "angular",
    "motion",
    "video-to-code",
    "ui-components",
    "shadcn",
    "design-system"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "registry:build": "npm run build && node build/index.cjs registry:build",
    "prepublishOnly": "npm run build && npm run registry:build",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf build",
    "dev:add": "npm run build && npm run registry:build && node build/index.cjs add --local",
    "dev:test": "npm run build && npm run registry:build",
    "test:install": "npm pack && npm install -g clipmotion-*.tgz",
    "test": "vitest",
    "test:cli": "vitest tests/cli",
    "test:e2e": "vitest tests/e2e",
    "test:registry": "vitest tests/registry",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "ora": "^9.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.0",
    "clsx": "^2.1.1",
    "glob": "^13.0.0",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rimraf": "^6.1.2",
    "tailwind-merge": "^2.6.0",
    "tsdown": "^0.18.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "vue": "^3.4.0"
  },
  "exports": {
    ".": {
      "require": "./build/index.cjs",
      "types": "./build/index.d.cts"
    }
  }
}
